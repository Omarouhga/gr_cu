<!-- views/website_layout.xml -->

<odoo>
    <template id="layout_inherit_header" inherit_id="website.layout">
        <xpath expr="//header" position="replace">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">CU</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Acceuil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/auth/login">Espace Résident</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/contact">Contacter-Nous</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </xpath>
    </template>

    <template id="layout_inherit_footer" inherit_id="website.layout">
        <xpath expr="//footer" position="replace">
            <footer class="bg-light">
                <div class="container py-3">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>Informations de l'entreprise</h4>
                            <p>Notre entreprise a pour objectif de satisfaire les résidents de la cité universitaire tout en simplifiant les processus de restauration</p>
                        </div>
                        <div class="col-md-4">
                            <h4>Contacter-Nous</h4>
                            <ul class="list-unstyled">
                                <li><i class="fa fa-map-marker"></i> Address: Mghila, Béni Mellal</li>
                                <li><i class="fa fa-phone"></i> Phone: +212 762-271299</li>
                                <li><i class="fa fa-envelope"></i> Email: restaurant@gmail.com</li>
                            </ul>
                        </div>
                        <div class="col-md-4">
                            <h4>Follow Us</h4>
                            <ul class="list-unstyled">
                                <li><a href="#"><i class="fa fa-facebook"></i> Facebook</a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i> Twitter</a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i> Instagram</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="bg-secondary py-1">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-6 text-white text-center text-md-left">
                                <p> 2023 Restaurant. tout les droits sont réservés.</p>
                            </div>
                            <div class="col-md-6 text-white text-center text-md-right">
                                <p>Développer et désigner par  TDI</p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </xpath>
        
    </template>
    <template id="custom_homepage" inherit_id="website.homepage">
        <xpath expr="//div[@id='wrap']" position="replace">
            <main>
                <section class="py-5 text-center">
                    <div class="container">
                        <h1 class="display-4">Bienvenue à la restauration en lign de la Cité Universitaire</h1>
                        <p class="lead mb-5">Réservez vos repas à l'avance pour éviter les files d'attente.</p>
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <img class="card-img-top" src="/gr_cu/static/img/image3.jpg"  alt="Card image cap"/>
                                    <div class="card-body">
                                        <h2 class="card-title">Réservation</h2>
                                        <p class="card-text">Réservez votre repas en quelques clics.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <img class="card-img-top" src="/gr_cu/static/img/image1.jpg" alt=""/>
                                    <div class="card-body">
                                        <h2 class="card-title">Espace Résident</h2>
                                        <p class="card-text">Connecter à votre compte, charger votre solde et personaliser vos réservations .</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="card h-100">
                                    <img class="card-img-top" src="/gr_cu/static/img/image2.jpg"  alt=""/>
                                    <div class="card-body">
                                        <h2 class="card-title">Contact</h2>
                                        <p class="card-text">Besoin d'aide ou d'informations complémentaires ? Contactez-nous.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </main>
            
        </xpath>
    </template>

    
    <template id="contact_us_page" name="Contacter-nous">
        <t t-call="website.layout">
            <div class="container my-5">
                <h1 class="text-center mb-4">Contacter-nous</h1>
                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <form>
                            <div class="form-group">
                                <label for="name">Nom complet</label>
                                <input type="text" class="form-control" id="name" placeholder="Votre nom complet"/>
                            </div>
                            <div class="form-group">
                                <label for="email">Adresse email</label>
                                <input type="email" class="form-control" id="email" placeholder="Votre adresse email"/>
                            </div>
                            <div class="form-group">
                                <label for="subject">Sujet</label>
                                <input type="text" class="form-control" id="subject" placeholder="Sujet de votre message"/>
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label>
                                <textarea class="form-control" id="message" rows="5" placeholder="Votre message"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">Envoyer</button>
                        </form>
                    </div>
                </div>
            </div>
        </t>
    </template>

    


</odoo>
